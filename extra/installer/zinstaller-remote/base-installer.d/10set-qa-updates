#!/bin/sh -e

USERNAME=`cat /tmp/QA_USERNAME`
PASSWORD=`cat /tmp/QA_PASSWORD`
REPO=qa.cloud.zentyal.com

# FIXME: testing purposes only, remove this
touch /tmp/COMMERCIAL_EDITION

if ! [ -f /tmp/COMMERCIAL_EDITION ]
then
    exit 0
fi

SOURCES_DIR=/target/etc/apt/sources.list.d
mkdir -p $SOURCES_DIR
echo "deb https://$USERNAME:$PASSWORD@$REPO/ zentyal-qa-3.0-precise main universe multiverse" >> $SOURCES_DIR/zentyal-qa.list

PREFERENCES_DIR=/target/etc/apt/preferences.d
mkdir -p $PREFERENCES_DIR
cat >> $PREFERENCES_DIR/01zentyal <<EOF
Package: *
Pin: release a=zentyal-qa
Pin-Priority: 900

Package: *
Pin: release a=now
Pin-Priority: 500

Package: *
Pin: release *
Pin-Priority: 50
EOF

exit 0
