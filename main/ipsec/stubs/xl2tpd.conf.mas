<%args>
    $tunnel
</%args>

[global]
listen-addr = <% $tunnel->{'left_ipaddr'} %>

[lns default]
ip range = <% $tunnel->{'ip_range'} %>
local ip = <% $tunnel->{'local_ip'} %>
require chap = yes
refuse pap = yes
require authentication = yes
ppp debug = yes
pppoptfile = /etc/ppp/options.xl2tpd
length bit = yes
