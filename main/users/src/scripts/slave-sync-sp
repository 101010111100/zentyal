use strict;
use warnings;

use EBox;
use EBox::Config;
use EBox::Global;
use EBox::Util::Lock;
use EBox::UsersAndGroups::Principal;

use Error qw(:try);

use constant LOCK_NAME => 'zentyal-slave-sync-sp';

sub pollSlave
{
    my ($slave) = @_;

    my @principals = @{$slave->pollServicePrincipals()};
    foreach my $p (@principals) {
        # Clear cached entry to query our LDAP
        print "Got " . $p->dn() . "\n";
        my $local = new EBox::UsersAndGroups::Principal(dn => $p->dn());
        print "Exists: " . $local->exists() . "\n";
        unless ($local->exists()) {
            my $ldif = $p->as_ldif();
            $local = EBox::UsersAndGroups::Principal->createFromLDIF($ldif);
        }
        print "Exists: " . $local->exists() . "\n";
    }
}

sub pollAllSlaves
{
    my ($usersModule) = @_;

    my @slaves = @{$usersModule->allSlaves()};
    foreach my $slave (@slaves) {
        pollSlave($slave);
    }
}

# __MAIN__

my $mode = 'run';
if (($#ARGV == 0) and ($ARGV[0] eq '-l')) {
    $mode = 'list';
}

EBox::init();

my $users = EBox::Global->modInstance('users');
$users->configured() or exit 0;

EBox::Util::Lock::lock(LOCK_NAME);
pollAllSlaves($users);
EBox::Util::Lock::unlock(LOCK_NAME);

exit 0;
