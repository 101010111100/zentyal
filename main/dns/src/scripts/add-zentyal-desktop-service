#!/bin/bash

if [ $# -ne 2 ]; then
    echo "Usage $0 service_name port"
    exit 0
fi

service=$1
port=$2
echo "$service $port"

if [ `grep -c $service /etc/services` -gt 0 ]; then
    sed -i "s/.*$service.*/$service\t$port\\/tcp/" /etc/services;
else
    echo -e "$service\t$port/tcp" >> /etc/services;
fi